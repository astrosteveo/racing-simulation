#!/bin/bash
#
# Post-commit hook for documentation reminders
# Runs after successful commit (non-blocking, informational only)
#
# Location: .git/hooks/post-commit (installed from .claude/hooks/post-commit)
# Install: Run `npm run prepare` or `bash scripts/install-hooks.sh`
#

# Get the commit message and hash
COMMIT_HASH=$(git log -1 --format=%h)
COMMIT_MSG=$(git log -1 --format=%s)

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "âœ… Commit successful: $COMMIT_HASH"
echo "   $COMMIT_MSG"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""
echo "ğŸ“‹ Post-commit checklist:"
echo ""
echo "   1. Update STATUS.md Recent Changes"
echo "      Add: $COMMIT_HASH - $COMMIT_MSG"
echo ""
echo "   2. Run documentation sync:"
echo "      npm run verify-docs"
echo ""
echo "   3. Update relevant specs/*/TASKS.md:"
echo "      - Mark task complete if finished"
echo "      - Update test status if tests changed"
echo "      - Move to next task if ready"
echo ""
echo "ğŸ’¡ TIP: The Claude hooks will remind you about these steps"
echo "        when you run commands, but you can run them manually now."
echo ""

exit 0
